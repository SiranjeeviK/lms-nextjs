{
  "name": "lms-nextjs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "$help": "echo This is a custom help message",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "dev:dotenv": "dotenv -e .env.local -p",
    "dev:dotenv:name": "dotenv -e .env.local -p ENV_NAME",
    "prod:dotenv": "dotenv -p",
    "prod:dotenv:name": "dotenv -p ENV_NAME",
    "dev:prisma:status": "dotenv -e .env.local -- npx prisma migrate status",
    "dev:prisma:migrate": "dotenv -e .env.local -- npx prisma migrate dev",
    "dev:prisma:generate": "dotenv -e .env.local -- npx prisma generate",
    "dev:prisma:push": "dotenv -e .env.local -- npx prisma db push",
    "dev:prisma:reset": "dotenv -e .env.local -- npx prisma migrate reset --skip-seed && dotenv -e .env.local -- npx prisma db push",
    "dev:prisma:studio": "dotenv -e .env.local -- npx prisma studio",
    "$comment": "the following scripts are just references",
    "$dev:db:init": "dotenv -e .env.local -- npx prisma generate && dotenv -e .env.local -- npx prisma db push",
    "$dev:db:push": "dotenv -e .env.local -- npx prisma db push",
    "$dev:db:reset": "dotenv -e .env.local -- npx prisma migrate reset --skip-seed && dotenv -e .env.local -- npx prisma db push",
    "$dev:db:seed": "dotenv -e .env.local -- npx prisma db seed",
    "$dev:db:studio": "dotenv -e .env.local -- npx prisma studio",
    "$dev:run": "nx run-many --parallel --target=serve --projects=calculator,configurator",
    "$prod:db:init": "npx prisma generate && npx prisma db push && npx prisma db seed"
